<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
        text-align: center;
    }

    .btn-edit {
        outline: none;
        border: none;
        background: greenyellow;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        display: inline-block;
    }

    .btn-delete {
        outline: none;
        border: none;
        background: rgb(218, 79, 85);
        height: 25px;
        width: 60px;
        border-radius: 3px;
        display: inline-block;
    }
</style>

<body>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>Firstname</th>
            <th>lastname</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button"
                        outline="none">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button"
                        outline="none">Delete</a>
                </td>
            </tr>
            <% } %>

    </table>
</body>

</html>